<%= stylesheet_link_tag 'toolbars', media: 'all' %>

<div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="demo-header mdl-layout__header mdl-color--grey-100 mdl-color-text--grey-600">
    <div class="mdl-layout__header-row">
      <span class="mdl-layout-title"><%= controller_name.classify.pluralize %></span>
      <div class="mdl-layout-spacer"></div>
      <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" id="hdrbtn">
        <i class="material-icons">more_vert</i>
      </button>
      <ul class="mdl-menu mdl-js-menu mdl-js-ripple-effect mdl-menu--bottom-right" for="hdrbtn">
        <li class="mdl-menu__item"><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
      </ul>
    </div>
  </header>
  <div class="demo-drawer mdl-layout__drawer mdl-color--blue-grey-900 mdl-color-text--blue-grey-50">
    <%= link_to(image_tag("big_bba_solutions.png", class: "logo"), root_url) %>
    <nav class="demo-navigation mdl-navigation mdl-color--blue-grey-800">
      <a class="mdl-navigation__link" href="<%= books_url %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">library_books</i>Books</a>
      <a class="mdl-navigation__link" href="<%= want_lists_url %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">list</i>Want Lists</a>
      <a class="mdl-navigation__link" href="<%= rental_returns_path %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">assignment_return</i>Rental Returns</a>
      <% if current_user.admin? %>
          <a class="mdl-navigation__link" href="<%= users_url %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">people</i>Users</a>
          <a class="mdl-navigation__link" href="<%= custom_isbns_url %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">library_books</i>Custom ISBN</a>
          <a class="mdl-navigation__link" href="<%= accounts_url %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">account_balance</i>Account</a>
          <a class="mdl-navigation__link" href="<%= tracked_skus_url %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">library_books</i>Tracked SKUs</a>
          <a class="mdl-navigation__link" href="<%= audits_url %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">track_changes</i>Audits</a>
          <a class="mdl-navigation__link" href="<%= thrift_orders_path %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">receipt</i>Thrift Orders</a>
          <a class="mdl-navigation__link" href="<%= fedex_accounts_path %>"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">local_shipping</i>Fedex Accounts</a>
      <% end %>
      <div class="mdl-layout-spacer"></div>
      <a class="mdl-navigation__link" href=""><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">help_outline</i><span class="visuallyhidden">Help</span></a>
    </nav>
  </div>
  <main class="mdl-layout__content mdl-color--grey-100">
    <div class="mdl-grid">
      <%= yield %>
    </div>
  </main>
</div>