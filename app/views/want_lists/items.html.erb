<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th>Want list</th>
      <th>EAN</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @want_list_items.each do |want_list_item| %>
      <tr>
        <td><%= want_list_item.want_list.name %></td>
        <td><%= want_list_item.ean %></td>
        <td><%= want_list_item.quantity %></td>
        <td><%= link_to 'Show', want_list_item %></td>
        <td><%= link_to 'Edit', edit_want_list_item_path(want_list_item) %></td>
        <td><%= link_to 'Destroy', want_list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
