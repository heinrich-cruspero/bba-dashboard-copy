<%= javascript_include_tag 'want_list_items' %>
<%= stylesheet_link_tag 'want_list_items', media: 'all' %>

      <table id="want-list-items-table" data-source="<%= want_list_item_path(format: :json) %>" class="mdl-data-table" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th class="mdl-data-table__cell--non-numeric">EAN</th>
          <th class="mdl-data-table__cell--non-numeric">Quantity</th>
          <th class="mdl-data-table__cell--non-numeric">Max Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @want_list_items.each do |want_list_item| %>
          <tr>
            <td data-label="Material" class="mdl-data-table__cell--non-numeric"><%= want_list_item.ean %></td>
            <td data-label="Material" class="mdl-data-table__cell--non-numeric"><%= want_list_item.quantity %></td>
            <td data-label="Material" class="mdl-data-table__cell--non-numeric"><%= want_list_item.max_price %></td>
            <td><%= button_to 'Show', want_list_item, :method => "get", class: "mdl-js-ripple-effect" %></td>
            <td><%= button_to 'Edit', edit_want_list_item_path(want_list_item), :method => "get", class: "mdl-js-ripple-effect" %></td>
            <td><%= button_to 'Delete', want_list_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "mdl-js-ripple-effect" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to 'Back', want_lists_path %>
    </div>
  </div>
