<div class="mdl-layout mdl-js-layout">
  <div class="mdl-card mdl-cell mdl-cell--6-col mdl-cell--4-col-tablet mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h5 class="mdl-card__title-text mdl-color-text--grey">Wantlist Items</h5>
    </div>

    <div class="mdl-card__supporting-text">
    <table class="mdl-data-table mdl-cell mdl-cell--12-col mdl-js-data-table mdl-shadow--2dp">
      <thead>
        <tr>
          <th class="mdl-data-table__cell--non-numeric">EAN</th>
          <th class="mdl-data-table__cell--non-numeric">Quantity</th>
          <th class="mdl-data-table__cell--non-numeric">Max Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @want_list_items.each do |want_list_item| %>
          <tr>
            <td data-label="Material" class="mdl-data-table__cell--non-numeric"><%= want_list_item.ean %></td>
            <td data-label="Material" class="mdl-data-table__cell--non-numeric"><%= want_list_item.quantity %></td>
            <td data-label="Material" class="mdl-data-table__cell--non-numeric"><%= want_list_item.max_price %></td>
            <td><%= link_to 'Show', want_list_item %></td>
            <td><%= link_to 'Edit', edit_want_list_item_path(want_list_item) %></td>
            <td><%= link_to 'Delete', want_list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'Back', want_lists_path %>
    </div>
  </div>
</div>