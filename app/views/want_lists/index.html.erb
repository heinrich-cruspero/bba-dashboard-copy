<%= javascript_include_tag 'want_lists' %>
<%= stylesheet_link_tag 'want_lists', media: 'all' %>

<div class="mdl-layout mdl-js-layout">
  <div><label>Search:<input class = "search" name="query" type="text" autocomplete="off"></label></div>
  <!--<div><label>Search:<input type="search" class="" placeholder="" aria-controls="want-list-table"></label></div>-->
  <div class="mdl-card mdl-cell mdl-cell--8-col mdl-cell--4-col-tablet mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h5 class="mdl-card__title-text mdl-color-text--grey">Manage wantlists</h5>
      </div>

<table id="want-list-table" data-source="<%= want_lists_path(format: :json) %>" class="mdl-data-table mdl-cell mdl-cell--12-col mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Name</th>
      <th>User email</th>
      <th>Want list privacy</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @want_lists.each do |want_list| %>
      <tr>
        <td data-label="Material" class="mdl-data-table__cell--non-numeric"><%= want_list.name %></td>
        <td><%= want_list.user.email %></td>
        <td><%= want_list.want_list_privacy.name %></td>
        <td><%= link_to 'Items', items_want_list_path(want_list) %></td>
        <td><%= link_to 'Show', want_list %></td>
        <td><%= link_to 'Edit', edit_want_list_path(want_list) %></td>
        <td><%= link_to 'Delete', want_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

