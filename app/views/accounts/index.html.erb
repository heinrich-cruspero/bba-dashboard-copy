
<div class="row">
  <div class="col-sm">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
      <h1 class="h2">Accounts</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm">
    <div class="btn-toolbar mb-2 mb-md-0 float-end">
      <div class="btn-grp mr-2">
        <%= button_to 'New Account', new_account_path, :method => "get", class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm table-responsive">
    <table class="table table-striped text-center" id="accounts-table" data-source="<%= accounts_path(format: :json) %>", data-turbolinks='false'>
      <thead>
        <th>Name</th>
        <th>Account Number</th>
        <th>Source Type</th>
        <th>Source Name</th>
        <th>Address Ln1</th>
        <th>Address Ln2</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Phone Number</th>
        <th>Extension</th>
        <th></th>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>
</div>