        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= form.label :street, class: "mdl-textfield__label" %>
          <%= form.text_field :street, id: :easy_post_account_street, class: "mdl-textfield__input", required: true %>
          <% easy_post_account.errors.full_messages_for(:street).each do |message| %>
