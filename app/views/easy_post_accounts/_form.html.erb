          <% easy_post_account.errors.full_messages_for(:state).each do |message| %>
            <span class="mdl-textfield__error"><%= message %></span>
          <% end %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= form.label :zip_code, class: "mdl-textfield__label" %>
          <%= form.text_field :zip_code, id: :easy_post_account_zip_code, class: "mdl-textfield__input", required: true %>
          <% easy_post_account.errors.full_messages_for(:zip_code).each do |message| %>
