        </div>

        <div class="mdl-selectfield">
          <label>Select Users</label><br>
          <%= select_tag "easy_post_account[user_ids][]", options_for_select(User.all.map{|user| [user.email, user.id]}, @easy_post_account.users.pluck(:id)), multiple: true, class: 'browser-default', size: 10 %>
        </div>

        <div class="mdl-card__actions">
          <%= form.submit "Submit", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        </div>
      <% end %>

      <%= link_to 'Back', easy_post_accounts_path %>
    </div>
  </div>
</div>