        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= form.label :parcel_length, class: "mdl-textfield__label" %>
          <%= form.text_field :parcel_length, id: :easy_post_account_parcel_length, class: "mdl-textfield__input", required: true %>
          <% easy_post_account.errors.full_messages_for(:state).each do |message| %>
