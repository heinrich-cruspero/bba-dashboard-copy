          <%= form.label :key, class: "mdl-textfield__label" %>
          <%= form.text_field :key, id: :easy_post_account_key, class: "mdl-textfield__input", required: true %>
          <% easy_post_account.errors.full_messages_for(:key).each do |message| %>
            <span class="mdl-textfield__error"><%= message %></span>
          <% end %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= form.label :account_number, class: "mdl-textfield__label" %>
