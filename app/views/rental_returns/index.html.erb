

<div class="row">
  <div class="col-sm">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
      <h1 class="h2">Rental Returns</h1>
    </div>
  </div>
  <div class="col-sm"></div>
</div>

<div class="row">
  <%= form_with url: import_rental_returns_path, local: true do |form| %>
      <%= form.hidden_field :accountable_type, class: "accountable_type_input" %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= form.select :accountable_id, FedexAccount.includes(:users).where(users: {id: current_user.id}).all.collect {|x| ["#{x.company_name}", x.id]}, {include_blank: 'Select Fedex Account'}, id: "fedex_accounts", required: true  %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= form.select :accountable_id, EasyPostAccount.includes(:users).where(users: {id: current_user.id}).all.collect {|x| ["#{x.company_name}", x.id]}, {include_blank: 'Select EasyPost Account'}, id: "easy_post_accounts", required: true %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= form.file_field :rental_returns_file, class: "mdl-textfield__input", required: true %>
    </div>

    <div class="mdl-card__actions">
      <%= form.submit "Submit", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm">
    <div class="btn-toolbar mb-2 mb-md-0 float-end">
      <div class="btn-grp mr-2">
        <%= button_to 'Import', import_rental_returns_path, :method => "get", class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm">
    <table id="rental_returns-table" data-source="<%= rental_returns_path(format: :json) %>"  data-turbolinks='false'>
      <thead>
        <tr>
          <th>Account Type</th>
          <th>Email</th>
          <th>Name</th>
          <th>Phone number</th>
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>Zip code</th>
          <th>Submitted</th>
          <th>Created Date</th>
          <th></th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>
