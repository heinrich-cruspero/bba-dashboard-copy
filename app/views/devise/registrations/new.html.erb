<div class="mdl-card__supporting-text">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :email, class: "mdl-textfield__label" %><br />
        <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
            <span class="mdl-textfield__error"><%= message %></span>
        <% end %>
      </div>

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :password, class: "mdl-textfield__label" %><br />
        <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
        <% resource.errors.full_messages_for(:password).each do |message| %>
            <span class="mdl-textfield__error"><%= message %></span>
        <% end %>
      </div>

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :password_confirmation, class: "mdl-textfield__label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "mdl-textfield__input" %>
        <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
            <span class="mdl-textfield__error"><%= message %></span>
        <% end %>
      </div>

      <div class="mdl-card__actions">
        <%= f.submit "Sign up", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>

      <%= render "devise/shared/links" %>
  <% end %>
</div>
