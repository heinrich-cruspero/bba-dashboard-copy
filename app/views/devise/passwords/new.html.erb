<div class="mdl-card__supporting-text">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :email, class: "mdl-textfield__label" %><br />
        <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
            <span class="mdl-textfield__error"><%= message %></span>
        <% end %>
      </div>

      <div class="mdl-card__actions">
        <%= f.submit "Send reset password instructions", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>

      <%= render "devise/shared/links" %>
  <% end %>
</div>