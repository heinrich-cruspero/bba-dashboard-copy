<div class="mdl-card__supporting-text">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :email, class: "mdl-textfield__label" %><br />
        <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
            <span class="mdl-textfield__error"><%= message %></span>
        <% end %>
      </div>

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :password, class: "mdl-textfield__label" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
        <% resource.errors.full_messages_for(:password).each do |message| %>
            <span class="mdl-textfield__error"><%= message %></span>
        <% end %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.check_box :remember_me, class: "mdl-checkbox__input" %>
            <%= f.label :remember_me, class: "mdl-checkbox__label" %>
          </div>
      <% end -%>

      <div class="mdl-card__actions mdl-card--border">
        <%= f.submit "Log in", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>

      <%= render "devise/shared/links" %>
  <% end %>
</div>