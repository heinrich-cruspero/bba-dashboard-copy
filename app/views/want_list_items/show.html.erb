<div class="mdl-layout mdl-js-layout">
  <div class="mdl-card mdl-cell mdl-cell--6-col mdl-cell--4-col-tablet mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h5 class="mdl-card__title-text mdl-color-text--grey">Wantlist Item</h5>
    </div>

    <div class="mdl-card__supporting-text">
      <ul class="mdl-list">
        <li class="mdl-list__item">
          <span class="mdl-list__item-primary-content">
            <strong>Want list:</strong>
            <%= @want_list_item.want_list.name %>
          </span>
        </li>
        <li class="mdl-list__item">
          <span class="mdl-list__item-primary-content">
            <strong>EAN:</strong>
            <%= @want_list_item.ean %>
          </span>
        </li>
        <li class="mdl-list__item">
          <span class="mdl-list__item-primary-content">
            <strong>Quantity:</strong>
            <%= @want_list_item.quantity %>
          </span>
        </li>
        <li class="mdl-list__item">
          <span class="mdl-list__item-primary-content">
            <strong>Max Price:</strong>
            <%= @want_list_item.max_price %>
          </span>
        </li>
      </ul>

      <%= link_to 'Edit', edit_want_list_item_path(@want_list_item) %> |
      <%= link_to 'Back', items_want_list_path(@want_list_item.want_list) %>
    </div>
  </div>
</div>