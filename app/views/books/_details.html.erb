<table class="mdl-data-table">
  <thead>
  <tr>
    <th>BBAP</th>
    <th>7SQAD</th>
    <th>7SQMD</th>
    <th>Low</th>
    <th>FBALow</th>
    <th>SalesRank</th>
    <th>ListPrice</th>
    <th>Direct</th>
    <th>1DQCA</th>
    <th>7DQCA</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @book.indaba_datum.bbap %></td>
    <td><%= @book.indaba_datum.weekly_sqad %></td>
    <td><%= @book.indaba_datum.weekly_sqmd %></td>
    <td><%= @book.amazon_datum.lowest_good_price %></td>
    <td><%= @book.amazon_datum.lowest_fba %></td>
    <td><%= @book.amazon_datum.sales_rank %></td>
    <td><%= @book.guide_datum.list_price %></td>
    <td><%= @book.indaba_datum.direct %></td>
    <td><%= @book.indaba_datum.daily_rqf %></td>
    <td><%= @book.indaba_datum.weekly_rqf %></td>
  </tr>
  </tbody>
</table>

<table class="mdl-data-table">
  <thead>
    <tr>
      <th>Indaba Instance</th>
      <th>Quantity Online</th>
      <th>Lowest Price</th>
    </tr>
  </thead>
  <tbody>
    <% @book.indaba_instances.order(:lowest_price).limit(5).each do |indaba_instance| %>
      <tr>
        <td><%= indaba_instance.name %></td>
        <td><%= indaba_instance.quantity_online %></td>
        <td><%= indaba_instance.lowest_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mdl-grid">
  <table id="fbaz-table" class="mdl-data-table mdl-cell">
    <thead>
    <tr>
      <th>Price</th>
      <th>Market</th>
    </tr>
    </thead>
    <tbody>
    <% @book.fbaz_data.each do |fbaz_data| %>
        <tr>
          <td><%= fbaz_data.price %></td>
          <td><%= fbaz_data.market %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <table id="orders-table" class="mdl-data-table mdl-cell">
    <thead>
    <tr>
      <th>Buyer Email</th>
    </tr>
    </thead>
    <tbody>
    <% @book.orders.each do |order| %>
        <tr>
          <td><%= order.buyer_email %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
