<%= form_with(model: book, local: true) do |form| %>
  <div class="mdl-textfield mdl-js-textfield">
    <%= form.label :ean, class: "mdl-textfield__label" %>
    <%= form.text_field :ean, id: :book_ean, class: "mdl-textfield__input" %>
    <% book.errors.full_messages_for(:ean).each do |message| %>
        <span class="mdl-textfield__error"><%= message %></span>
    <% end %>
  </div>

  <br />

  <div class="mdl-textfield mdl-js-textfield">
    <%= form.label :isbn, class: "mdl-textfield__label" %>
    <%= form.text_field :isbn, id: :book_isbn, class: "mdl-textfield__input" %>
    <% book.errors.full_messages_for(:isbn).each do |message| %>
        <span class="mdl-textfield__error"><%= message %></span>
    <% end %>
  </div>

  <div class="mdl-card__actions">
    <%= form.submit "Submit", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
  </div>
<% end %>
